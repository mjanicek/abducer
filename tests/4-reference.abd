%------------------------------------------------------------------------------%

resolves_color(LId, Id) <-
	bel : color(Id, Color),
	bel : ling_color(LId, LColor),
	color_to_ling_color(Color, LColor) / correlate.

resolves_shape(LId, Id) <-
	bel : shape(Id, Shape),
	bel : ling_shape(LId, LShape),
	shape_to_ling_shape(Shape, LShape) / correlate.

resolves(LId, Id) <-
	resolves_color(LId, Id),
	resolves_shape(LId, Id).

